<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/parkinglotImage"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/parkinglot1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="158dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/parkinglotName"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="주차장 이름"
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="#000000"
                    android:layout_marginTop="2dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사용예정"
                    android:textColor="@android:color/holo_red_dark"
                    android:fontFamily="@font/notosans_regular"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@color/darkgray"></View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주소"
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/parkinglotAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="경기도 시흥시 정왕동 2121-1 "
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="#000000"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="결제 금액"
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/parkinglotPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="3,000원"
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="#000000"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="결제 일자"
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/parkinglotSchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="2020년 07월 22일(수) 12:00\n~ 2020년 07월 22일(월) 14:00"
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="#000000"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="142dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/btn_check_in"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="180dp"
                android:layout_height="32dp"
                android:background="@drawable/btn_orange"
                android:fontFamily="@font/notosans_regular"
                android:text="입차"
                android:textColor="@android:color/white"
                android:textSize="13sp" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="180dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"

                android:background="@drawable/btn_orange_stroke"
                android:fontFamily="@font/notosans_regular"
                android:text="예약 취소"
                android:textColor="@color/colorTintOrange"
                android:textSize="13sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>